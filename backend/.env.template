# Database Configuration
# SQLite (recommended for development - no installation needed)
DATABASE_URL=sqlite:///./portfolio.db

# PostgreSQL (for production or if you prefer)
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/portfolioplanner

# Security (IMPORTANT: Generate your own keys!)
# Generate SECRET_KEY: openssl rand -hex 32
SECRET_KEY=your-secret-key-here-generate-with-openssl-rand-hex-32

# Generate ENCRYPTION_KEY: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=your-fernet-key-here

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Application
APP_NAME=Portfolio Planner
APP_VERSION=1.0.0
DEBUG=true

# CORS
CORS_ORIGINS=http://localhost:3000

# Schwab API (Mock Mode for Development)
USE_MOCK_SCHWAB_DATA=true
SCHWAB_CALLBACK_URL=http://localhost:8000/api/v1/schwab/callback

# Logging
LOG_LEVEL=INFO
